@import url(top.css);

div.head{width:960px; margin:0 auto; height:40px; border-bottom:1px solid #ddd; margin-top:30px;}
div.head p{display:inline-block;height:40px; font-size:18px; text-align:center;line-height:40px; }
div.head .head-right{float:right;}
.head-right a{ color:#1aa3e7; font-size:15px; }
div.content{width:960px; margin:0 auto;}
div.content-title{width:100%; height:60px; }
div.content-title div{height:60px; display:inline-block; padding-top:20px;  margin-right:20px;color:#bbb;  } 
div.content-title div img{margin-right:5px;position:relative;top:5px; cursor:pointer;}
div.content-title div.theme{font-size:30px; font-weight:bold; padding:15px;padding-left:0px; color:#000;	  }
div.content-title div.time,div.interset,div.remark,div.join{font-size:13px;}

div.content-detail{width:100%;padding:10px 20px 20px 80px;font-size:18px; border-bottom:dashed 1px #eee;color:#000;}
div.content ul{width:42px;border-right:1px dashed #ddd; padding-right:10px; display:inline-block;
				float:left; }
div.content ul li{width:40px; padding:5px;font-size:15px; color:#b2b0b0;}
div.content ul li.selected{border-right:3px solid #1aa3e7; color:#1aa3e7;}
div.content ul li+li{border-top:1px solid #ddd;}
/**人员列表*/
.content-table,.content-table1{width:860px;   position:relative;left:20px;  display:inline-block; }
.content-table.selected,.content-table1.selected{display:none; }

.content-table td, .content-table th {padding: 15px;border-bottom: 1px dashed #f2f2f2;}
.content-table th {text-align: left;border-bottom: 1px dashed #ccc; color:#b2b0b0; }
.content-table td{min-width:100px;font-size:13px; }
.content-table th img{position: relative; top:5px; }			
/**评论列表*/

div.remark{width:100%; color:#555;padding-right:50px; padding-left:10px; margin-bottom:10px;/* border-bottom:1px dashed #ddd;*/  }
div.remark p.fadeback img{position:relative; top:3px; margin-right:10px;  }
div.avtar{width:40px;  position:relative;float:left; top:20px;cursor:pointer;  }
div.remark-detail{width:700px; display:inline-block; margin-left:10px;}
div.remark-detail p.remark-username{margin-top:15px; margin-bottom:5px; }
p.remark-username a{color:#1aa3e7;}
div.remark-foot{margin-top:10px; }
div.remark-foot p{display:inline-block; /* width:200px;*/ text-align:center; color:#b2b2b0; font-size:13px; }
div.remark-foot p.fadeback{margin-left:40px;color:#b2b2b0;}
div.remark-foot p.fadeback:hover{color:orange};