
#login{width:400px;height:100%; position:absolute; right:5px; background-color:white; opacity:rgba(255,255,255,0.7);
		z-index:200;   }
.logo-word{text-align:center; margin-top: 80px;margin-bottom:20px;  }
.bubble {
		clear:both;
				margin: 0 auto;
				width: 350px;
				-moz-border-radius: 10px;
				-webkit-border-radius: 10px;
				-khtml-border-radius: 10px;
				border-radius: 10px;
				-moz-box-shadow: 0px 0px 8px rgba(0,0,0,0.3);
				-khtml-box-shadow: 0px 0px 8px rgba(0,0,0,0.3);
				-webkit-box-shadow: 0px 0px 8px rgba(0,0,0,0.3);
				box-shadow: 0px 0px 8px rgba(0,0,0,0.3);
				position: relative;
				z-index: 90;
			}
			.rectangle {
				background: #7f9db9;
				height: 50px;
				width: 380px;
				-moz-box-shadow: 0px 0px 4px rgba(0,0,0,0.55);
				-khtml-box-shadow: 0px 0px 4px rgba(0,0,0,0.55);
				-webkit-box-shadow: 0px 0px 4px rgba(0,0,0,0.55);
				box-shadow: 0px 0px 4px rgba(0,0,0,0.55);
				z-index: 100;
				position:relative;
				left: -15px;
				top: 30px;
			}
			.rectangle h2 {
				font-size: 30px;
				color: #fff;
				text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
				text-align: center;
			}
			.bubble:after {
				content:"";
				border: 15px solid #7d90a3;
				border-color: transparent #7d90a3 transparent transparent;
				height: 0px;
				width: 0px;
				position: absolute;
				left: -30px;
				top: 65px;
				z-index: -1;
			}
			.bubble:before {
				content: "";
				border: 15px solid #7d90a3;
				border-color: transparent transparent transparent #7d90a3;
				height: 0;
				width: 0;
				position: absolute;
				right: -30px;
				top: 65px;
				z-index: -1;
			}
		.info {
				padding: 60px 50px 35px 50px;
			}
		.info input{display:block;width:250px; height:40px;font-size:20px; font-family:"微软雅黑";
		   	font: normal normal 20px/40px  'icomoon';
		  background-color: #ffffff;margin-bottom:20px;
  		border: 1px solid #cccccc;
  		border-radius: 3px;
  			-webkit-transition: border linear 0.2s, box-shadow linear 0.2s;
     		-moz-transition: border linear 0.2s, box-shadow linear 0.2s;
      		-ms-transition: border linear 0.2s, box-shadow linear 0.2s;
       		-o-transition: border linear 0.2s, box-shadow linear 0.2s;
          	transition: border linear 0.2s, box-shadow linear 0.2s;
   }
input:focus {
   		border-color:rgba(0,153,204,1);
  		box-shadow: 0 0 6px rgba(0,153,204,0.8);}	
button{font-size:20px; font-family:"微软雅黑"; height:40px; width:250px;color:#444; 
	  		cursor: pointer; border: 1px solid #cccccc;border-radius:3px; margin-bottom:10px; 
	  		transition:all linear 0.3s;
	  		-webkit-transition:box-shadow linear 0.3s;
	  		-moz-transition:box-shadow linear 0.3s;
	  		-ms-transition:box-shadow linear 0.3s;
	  		-o-transition:box-shadow linear 0.3s;	
 	}
button:hover,input:hover{background-color:rgba(0,153,204,0.1); }
button:hover{box-shadow: 0 0 6px rgba(0,153,204,0.8);}
 	.info span{font-size:18px; font-family:"微软雅黑"; font-weight:normal; color:orange;}
 	span.right{position:relative; float:right; }
 	.info a{text-decoration: none;} .info span:hover{color:#333;} 


/**********通知信息********/
div.username,div.password{position:relative; }
.popup{
    cursor:pointer;
    visibility:hidden;
    background:#4fb6c3; 
    padding:10px; 
    padding-right:5px;
    padding-left:5px;  
    color:#fff;  
    border-radius:4px;
    position:absolute; 
    top:50px; 
   right:0%;
   z-index:200;
   box-shadow:1px 1px 2px #4fb6c3,-1px -1px 2px  #4fb6c3;  
}
.focus{
    visibility:visible;
}
.popup span{
    display:block; 
    width:0; 
    height:0; 
    border-width:0 10px 10px; 
    border-style:solid; 
    border-color:transparent transparent #4fb6c3; 
    position:absolute; 
    top:-10px; 
    left:50%;/*三角形居中显示*/
    margin-left:-10px;/* 三角形居中显示 */
}